# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Allowed Telegram User IDs (comma-separated)
# Get your user ID from @userinfobot on Telegram
ALLOWED_USER_IDS=123456789,987654321

# Bot Mode Configuration
# WEBHOOK_MODE: Set to "true" for webhook mode (Cloud Run), "false" for polling mode (local dev)
WEBHOOK_MODE=false
# WEBHOOK_URL: Required only if WEBHOOK_MODE=true (your Cloud Run service URL)
WEBHOOK_URL=

# HTTP Server Configuration for Mini App
# HTTP_PORT: Port for the Mini App HTTP server (default: 8081)
HTTP_PORT=8081

# Database Configuration
# Set to "true" to use in-memory mock database for testing
USE_MOCK_DB=false

# ClickHouse connection (required if USE_MOCK_DB is false)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_DATABASE=default
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_USE_TLS=false

# Cloud Run / Docker Configuration (optional)
# PORT is automatically set by Cloud Run, default is 8080
PORT=8080
