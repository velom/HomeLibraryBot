# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Allowed Telegram User IDs (comma-separated)
# Get your user ID from @userinfobot on Telegram
ALLOWED_USER_IDS=123456789,987654321

# Bot Mode Configuration
# WEBHOOK_MODE: Set to "true" for webhook mode (Cloud Run), "false" for polling mode (local dev)
# Note: When WEBHOOK_MODE=false, API authentication is disabled for easier local testing
WEBHOOK_MODE=false
# WEBHOOK_URL: Required only if WEBHOOK_MODE=true (your Cloud Run service URL)
WEBHOOK_URL=

# HTTP Server Configuration
# PORT: Port for the main HTTP server (serves health checks, webhook, and Mini App at /web-app)
# Automatically set by Cloud Run, default is 8080
PORT=8080

# Notification Configuration
# NOTIFICATION_CHAT_ID: Telegram chat ID to send notifications when events are created via web-app
# Leave empty or 0 to disable notifications
NOTIFICATION_CHAT_ID=
# NOTIFICATION_THREAD_ID: Thread/topic ID for forum groups (optional)
# Leave empty or 0 to send to general chat (no specific topic)
NOTIFICATION_THREAD_ID=

# Database Configuration
# Set to "true" to use in-memory mock database for testing
USE_MOCK_DB=false

# ClickHouse connection (required if USE_MOCK_DB is false)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_DATABASE=default
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_USE_TLS=false
